<div class="m__full_width_image">
    {% if content.use_container %}
        <div class="container mx-auto px-4">
            <div class="m__full_width_image__wrapper w-full">
                <img src="{{ content.full_width_image.url }}" alt="{{ content.full_width_image.alt }}">
            </div>
        </div>
    {% else %}
        <div class="m__full_width_image__wrapper w-full bg-cover bg-no-repeat bg-center h-full" style="background-image: url('{{ content.full_width_image.url }}')"></div>
    {% endif %}
</div>