<div class="m__stats_blocks {{ content.padding ? content.top_padding ~ ' ' ~  content.bottom_padding }}">
    <div class="container mx-auto px-4">
        <div class="m__stats_blocks__wrapper w-full flex flex-col justify-evenly items-start mx-auto">
            <div class="m__stats_blocks__wrapper__content flex flex-row w-full">
                {% for section in content.stats %}
                    <div class="m__stats_blocks__wrapper__content--individual text-center mx-auto {% if loop.index != section|length + 1 %}border-r-2 border-black{% endif %} {% if section|length == 1 or section|length == 2 %}w-1/2 {% elseif section|length == 3 %}w-1/3 {% else %}w-1/4 {% endif %}">
                        {% if section.stat %}
                            <h4 class="my-4">{{ section.stat }}</h4>
                        {% endif %}
                        {% if section.description %}
                            <p class="mt-4 mb-8">{{ section.description }}</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>